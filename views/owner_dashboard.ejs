<!DOCTYPE html>
<html lang="en">

<head>
    <title>Home Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/owner_restaurant.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/vendor/foundation.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">

    <body>
        <div style="height: 800px">
            <div class="columns" style="height: 100%">
                <div class="table-scroll" style="height: 100%">
                    <table>
                        <thead>
                            <tr>
                                <th>
                                    <h3 class="restaurant-owner-label">Preview</h3>
                                </th>
                                <th>
                                    <div>
                                        <h3 class="restaurant-owner-label">Image</h3>
                                    </div>
                                </th>
                                <th>
                                    <div>
                                        <h3 class="restaurant-owner-label">Name</h3>
                                    </div>
                                </th>
                                <th>
                                    <div>
                                        <h3 class="restaurant-owner-label">Description</h3>

                                    </div>
                                </th>
                                <th>
                                    <div>
                                        <h3 class="restaurant-owner-label">Price</h3>

                                    </div>
                                </th>
                                <th>
                                    <div>
                                        <h3 class="restaurant-owner-label">Time To Prepare</h3>

                                    </div>
                                </th>
                                <th>
                                    <div>
                                        <h3 class="restaurant-owner-label">Is Active</h3>

                                    </div>
                                </th>
                            </tr>

                        </thead>
                        <tbody>
                            <% menuItems.forEach(item => {%>
                                <tr>
                                    <th>
                                        <button class="button" data-open="menuItemPreviewModul<%=item.id%>">Click TO Preview</button>
                                    </th>
                                    <th class="restaurant-owner-table-cell">
                                        <div class="restaurant-owner-table-image-container">
                                            <img src="<%=item.image_url%>">
                                        </div>
                                        <div>
                                            <button class="button" data-open="editImageModul<%=item.id%>">EDIT</button>
                                    </th>
                                    <th>
                                        <div>
                                            <h5>
                                                <%=item.name%>
                                                    </h2>
                                        </div>
                                        <div>
                                            <button class="button" data-open="editNameModul<%=item.id%>">EDIT</button>
                                        </div>
                                    </th>
                                    <th>
                                        <div>
                                            <h5>
                                                <%=item.description%>
                                            </h5>
                                        </div>
                                        <div>
                                            <button class="button" data-open="editDescriptionModul<%=item.id%>">EDIT</button>
                                        </div>
                                    </th>
                                    <th>
                                        <div>
                                            <h5>
                                                <%=item.price%>
                                            </h5>
                                        </div>
                                        <div>
                                            <button class="button" data-open="editPriceModul<%=item.id%>">EDIT</button>
                                        </div>

                                    </th>
                                    <th>
                                        <div>
                                            <h5>
                                                <%=item.time_to_prepare%>
                                            </h5>
                                        </div>
                                        <div>
                                            <button class="button " data-open="editTimeModul<%=item.id%>">EDIT</button>
                                        </div>
                                    </th>
                                    <th>
                                        <div>
                                            <h5>
                                                <%=item.is_active%>
                                            </h5>
                                        </div>
                                        <div class="restaurant-owner-field-item">

                                            <button class="button" data-open="editActiveModul<%=item.id%>">EDIT</button>
                                        </div>
                                    </th>
                                </tr>

                                <!------------------------------------------------------------------- Modals -->

                                <div class="reveal" id="menuItemPreviewModul<%=item.id%>" data-reveal data-animation-out="fade-out">
                                    <div class="card restaurant-owner-card" style="width: 300px;">
                                        <div class="card-divider">
                                            <h4>
                                                <%=item.name%>
                                            </h4>
                                        </div>
                                        <img src="<%=item.image_url%>">
                                        <div class="card-section">
                                            <p>
                                                <%=item.description%>
                                            </p>
                                            <p>$
                                                <%=item.price%>
                                            </p>
                                            <button class="button">Add To Cart</button>
                                            <button class="close-button " data-close aria-label="Close modal " type="button">
                  <span aria-hidden="true ">&times;</span>
                </button>
                                        </div>
                                    </div>
                                </div>


                                <div class="reveal" id="editImageModul<%=item.id%>" data-reveal data-animation-out="fade-out">
                                    <div>
                                        <img style="max-width: 200px" src="<%=item.image_url%>">
                                    </div>
                                    <form action="owner/uploadPhoto" method="POST" class="">

                                        <h5>Image URL</h5>
                                        <input type="text" placeholder="url" name="updateURL">

                                        <div>
                                            <button class="button" type="submit">Confirm</button>
                                            <button class="button">Cancel</button>
                                        </div>
                                        <input type="hidden" name="menuItemId" value="<%=item.id%>">
                                    </form>
                                    <button class="close-button " data-close aria-label="Close modal " type="button">
                  <span aria-hidden="true ">&times;</span>
                </button>
                                </div>

                                <div class="reveal" id="editNameModul<%=item.id%>" data-reveal data-animation-out="fade-out">
                                    <form action="owner/updateName" method="POST" class="restaurant-owner-edit-image-modul-image ">
                                        <div class="grid-container ">
                                            <div class="grid-x grid-padding-x ">
                                                <div class="medium-12 cell ">
                                                    <h5>Name</h5>
                                                    <input type="text" placeholder="name" name="updateName">
                                                </div>
                                            </div>
                                        </div>

                                        <div>
                                            <button class="button" type="submit">Confirm</button>
                                            <button class="button ">Cancel</button>
                                        </div>
                                        <input type="hidden" name="menuItemId" value="<%=item.id%>">
                                    </form>
                                    <button class="close-button " data-close aria-label="Close modal " type="button ">
                  <span aria-hidden="true ">&times;</span>
                </button>
                                </div>

                                <div class="reveal" id="editDescriptionModul<%=item.id%>" data-reveal data-animation-out="fade-out">

                                    <form action="owner/updateDescription" method="POST" class="restaurant-owner-edit-image-modul-image">
                                        <div class="grid-container ">
                                            <div class="grid-x grid-padding-x ">
                                                <div class="medium-12 cell ">
                                                    <h5>Description</h5>
                                                    <textarea placeholder="Description" name="updateDescription"></textarea>
                                                </div>

                                            </div>
                                        </div>

                                        <div>
                                            <button class="button " type="submit">Confirm</button>
                                            <button class="button ">Cancel</button>
                                        </div>
                                        <input type="hidden" name="menuItemId" value="<%=item.id%>">
                                    </form>
                                    <button class="close-button " data-close aria-label="Close modal " type="button ">
                  <span aria-hidden="true ">&times;</span>
                </button>
                                </div>

                                <div class="reveal" id="editPriceModul<%=item.id%>" data-reveal data-animation-out="fade-out">

                                    <form action="owner/updatePrice" method="POST" class="restaurant-owner-edit-image-modul-image ">
                                        <div class="grid-container ">
                                            <div class="grid-x grid-padding-x ">
                                                <div class="medium-12 cell ">
                                                    <h5>Price</h5>
                                                    <input type="text" placeholder="Price " name="updatePrice">
                                                </div>
                                            </div>
                                        </div>

                                        <div>
                                            <button class="button" type="submit">Confirm</button>
                                            <button class="button ">Cancel</button>
                                        </div>
                                        <input type="hidden" name="menuItemId" value="<%=item.id%>">
                                    </form>
                                    <button class="close-button " data-close aria-label="Close modal " type="button ">
                  <span aria-hidden="true ">&times;</span>
                </button>
                                </div>

                                <div class="reveal" id="editTimeModul<%=item.id%>" data-reveal data-animation-out="fade-out">

                                    <form action="owner/updateTime" method="POST" class="restaurant-owner-edit-image-modul-image ">
                                        <div class="grid-container ">
                                            <div class="grid-x grid-padding-x ">
                                                <div class="medium-12 cell ">
                                                    <h5>Time in Minutes</h5>
                                                    <input type="text" placeholder="Minutes" name="updateTime">
                                                </div>
                                            </div>
                                        </div>
                                        <div>
                                            <button class="button" class="submit">Confirm</button>
                                            <button class="button">Cancel</button>
                                        </div>
                                        <input type="hidden" name="menuItemId" value="<%=item.id%>">
                                    </form>
                                    <button class="close-button " data-close aria-label="Close modal " type="button ">
                  <span aria-hidden="true ">&times;</span>
                </button>
                                </div>

                                <div class="reveal" id="editActiveModul<%=item.id%>" data-reveal data-animation-out="fade-out">

                                    <form action='owner/updateActive' method="POST">
                                        <h5>Select Menu</h5>
                                        <select name="updateActive">
                                              <option value="true">True</option>
                                              <option value="false">False</option>
                                            </select>

                                        <div>
                                            <button class="button" type="submit">Confirm</button>
                                            <button class="button ">Cancel</button>
                                        </div>
                                        <input type="hidden" name="menuItemId" value="<%=item.id%>">
                                    </form>
                                    <button class="close-button " data-close aria-label="Close modal " type="button">
                  <span aria-hidden="true ">&times;</span>
                </button>
                                </div>
                                <%})%>
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
            <footer>
                <%include ./partials/_owner_dashboard_footer%>
            </footer>
            <script src="https://code.jquery.com/jquery-2.1.4.min.js "></script>
            <script src="https://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.js "></script>
            <script>
                $(document).foundation();
            </script>
    </body>

</html>
